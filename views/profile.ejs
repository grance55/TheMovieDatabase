    <div class="wrapper__profile profile">
      <i class="fas fa-user-circle profile__icon"></i>
      <h1 class="profile__heading">PROFILE</h1>
      <p class="profile__mail"><%= email %></p>
    </div>


    <h3 class="wrapper__heading">Your favorite movies:</h3>


    <div class="wrapper__favorites favorites">
      <% for(var i=0; i < movies.length; i++) { %>
      <div class="favorites__element element">

        <img class="element__poster" src="<%= movies[i].poster %>" alt="presentation">

        <div class="element__group group">
          <div class="group__header header">
            <h4 class="header__title"><%= movies[i].title %></h4>
            <form action="/remove-favorite" method="POST">
              <input type="hidden" value="<%= movies[i].id %>" name="id">
              <button class="header__button inline" type="submit"><i class="far fa-heart header__icon"></i></button>
            </form>
          </div>

          <h5 class="group__year"><%= movies[i].year %></h5>
          <p class="group__plot"><%= movies[i].plot %></p>


        </div>

      </div>
      <% } %>
